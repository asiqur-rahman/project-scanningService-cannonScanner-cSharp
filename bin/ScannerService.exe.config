<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
	<system.serviceModel>
		<services>
			<!-- This section is optional with the new configuration model
           introduced in .NET Framework 4. -->
			<service name="ScannerService.ScanningService" behaviorConfiguration="webBehaviour">
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:6996" />
					</baseAddresses>
				</host>
				<endpoint address="" binding="webHttpBinding" contract="ScannerService.IScanningService" behaviorConfiguration="web" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="webBehaviour">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="False" />
				</behavior>
			</serviceBehaviors>
			<endpointBehaviors>
				<behavior name="web">
					<webHttp />
				</behavior>
			</endpointBehaviors>

		</behaviors>

	</system.serviceModel>
</configuration>